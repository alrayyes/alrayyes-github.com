---
pageable: true
---
<h1>Archive for
  <% case page_type
     when 'day' %>
    <%= Date.new(year, month, day).strftime('%b %e %Y') %>
  <% when 'month' %>
    <%= Date.new(year, month, 1).strftime('%b %Y') %>
  <% when 'year' %>
    <%= year %>
  <% end %>
</h1>

<% page_articles.each_with_index do |article, i| %>
  <%= partial "article_list_element", :locals => {:article => article} %>
<% end %>

<% if paginate %>
  <div class="pagination pagination-centered">
    <%= pagination_links %>
  </div>
<% end %>
